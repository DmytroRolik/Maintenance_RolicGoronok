<Window x:Class="Maintenance_RolicGoronok.AddModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая модель" Height="100" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Label Content="Введите новую марку: " Width="135"/>
            <TextBox x:Name="model" Width="150" Style="{DynamicResource textBox}"/>
        </StackPanel>

        <Button Grid.Row="1" x:Name="add" Content="Добавить" Click="add_Click" Width="100" Style="{DynamicResource Button}"   />
    </Grid>
</Window>
